<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/walkMapFragment"
        android:name="com.example.fitnesstracker.maps.WalkMapFragment"
        android:label="Walk Map"/>
    <fragment
        android:id="@+id/runMapFragment"
        android:name="com.example.fitnesstracker.maps.RunMapFragment"
        android:label="Run Map"/>

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.fitnesstracker.auth.SplashFragment"
        android:label="Splash">

        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.fitnesstracker.main.MainFragment"
        android:label="Main">

        <action
            android:id="@+id/action_mainFragment_to_splashFragment"
            app:destination="@id/splashFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>

        <!-- ✅ THIS IS WHAT WAS MISSING -->
        <action
            android:id="@+id/action_mainFragment_to_historyFragment"
            app:destination="@id/historyFragment"/>
    </fragment>

    <!-- ✅ HISTORY DESTINATION -->
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.fitnesstracker.main.HistoryFragment"
        android:label="History"/>
</navigation>
