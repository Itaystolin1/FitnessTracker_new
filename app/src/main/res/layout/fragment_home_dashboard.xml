<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="16dp">

    <!-- Header / Logout -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TODAY"
        android:textColor="@color/text_secondary_dark"
        android:letterSpacing="0.15"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnLogout"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_lock_power_off"
        app:tint="@color/neon_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keep Moving"
        android:textColor="@color/text_primary_dark"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDate" />

    <!-- Walking Toggle Switch -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchWalkTracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tracking Active"
        android:textColor="@color/text_secondary_dark"
        android:checked="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogout" />

    <!-- Main Stats Card (Steps) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardSteps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_card_dark"
        android:padding="32dp"
        app:layout_constraintTop_toBottomOf="@+id/switchWalkTracking">

        <TextView
            android:id="@+id/lblSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAILY STEPS"
            android:textColor="@color/text_secondary_dark"
            android:textSize="12sp"
            android:letterSpacing="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvStepCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="0"
            android:textColor="@color/neon_green"
            android:textSize="64sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblSteps" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="12dp"
            android:text="steps"
            android:textColor="@color/text_secondary_dark"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvStepCount"
            app:layout_constraintStart_toEndOf="@+id/tvStepCount" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tvStepCount">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:text="DISTANCE"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvDistance"
                    android:text="0.0 km"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:text="CALORIES"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvCalories"
                    android:text="0 kcal"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Start Running Button with Stick Man -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStartRun"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_neon_primary"
        android:text="START RUNNING"
        android:letterSpacing="0.1"
        android:textColor="@color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:drawableEnd="@drawable/ic_run_stickman"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toBottomOf="@+id/cardSteps" />

</androidx.constraintlayout.widget.ConstraintLayout>